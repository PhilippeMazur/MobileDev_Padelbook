<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- User Name -->

    <!-- Plays in Location -->

    <!-- Matches Played -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="0dp"
        android:background="#4267B2"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="User Name"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Plays in Location"
                        android:textAlignment="center"
                        android:textColor="#CCCCCC" />

                    <TextView
                        android:id="@+id/textViewMatchesPlayed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textViewMatchesPlayedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Matches"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/navigationTabs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:tabBackground="@color/white"
                    app:tabIndicator="@color/teal_200"
                    app:tabIndicatorColor="#FFFFFF">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/Activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#3F51B5"
                        android:backgroundTint="#3F51B5"
                        android:text="Activity" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/Preferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#3F51B5"
                        android:text="Preferences" />

                </com.google.android.material.tabs.TabLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Title -->

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/showFragment"
        android:name="com.example.padelbook.ui.profile.ActivityFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
